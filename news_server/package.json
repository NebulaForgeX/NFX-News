{
  "name": "news_server",
  "version": "1.0.0",
  "description": "基于 Fastify + TypeScript 的新闻聚合服务，采用 DDD（领域驱动设计）架构。",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev:auth:api": "NODE_OPTIONS='--trace-warnings --no-warnings=TimeoutNegativeWarning' tsx watch inputs/auth/api/main.ts",
    "dev:auth:pipeline": "NODE_OPTIONS='--trace-warnings --no-warnings=TimeoutNegativeWarning' tsx watch inputs/auth/pipeline/main.ts",
    "dev:news:api": "NODE_OPTIONS='--trace-warnings --no-warnings=TimeoutNegativeWarning' tsx watch inputs/news/api/main.ts",
    "dev:news:pipeline": "NODE_OPTIONS='--trace-warnings --no-warnings=TimeoutNegativeWarning' tsx watch inputs/news/pipeline/main.ts",
    "dev:source:api": "NODE_OPTIONS='--trace-warnings --no-warnings=TimeoutNegativeWarning' tsx watch inputs/source/api/main.ts",
    "dev:source:pipeline": "NODE_OPTIONS='--trace-warnings --no-warnings=TimeoutNegativeWarning' tsx watch inputs/source/pipeline/main.ts",
    "build": "tsc",
    "start:auth:api": "node dist/inputs/auth/api/main.js",
    "start:auth:pipeline": "node dist/inputs/auth/pipeline/main.js",
    "start:news:api": "node dist/inputs/news/api/main.js",
    "start:news:pipeline": "node dist/inputs/news/pipeline/main.js",
    "start:source:api": "node dist/inputs/source/api/main.js",
    "start:source:pipeline": "node dist/inputs/source/pipeline/main.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "news",
    "aggregation",
    "fastify",
    "ddd",
    "microservices"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/accepts": "^5.0.3",
    "@fastify/accepts-serializer": "^6.0.3",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/postgres": "^6.0.2",
    "@fastify/redis": "^7.1.0",
    "@types/md5": "^2.3.6",
    "cheerio": "^1.1.2",
    "consola": "^3.4.2",
    "dayjs": "^1.11.19",
    "defu": "^6.1.4",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "fast-xml-parser": "^5.3.2",
    "fastify": "^5.6.2",
    "iconv-lite": "^0.7.0",
    "ioredis": "^5.8.2",
    "jose": "^6.1.2",
    "kafkajs": "^2.2.4",
    "md5": "^2.3.0",
    "ofetch": "^1.5.1",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
